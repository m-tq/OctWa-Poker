# ===========================================
# OCT Poker Server Configuration
# ===========================================

# Server Configuration
PORT=3002

# ===========================================
# Game Configuration - Default Table Settings
# ===========================================
DEFAULT_SMALL_BLIND=10
DEFAULT_BIG_BLIND=20
DEFAULT_MIN_BUY_IN=400
DEFAULT_MAX_BUY_IN=2000
DEFAULT_MAX_PLAYERS=8

# Turn timeout in milliseconds
TURN_TIMEOUT_MS=30000

# Disconnect grace period in milliseconds
DISCONNECT_GRACE_MS=60000

# ===========================================
# Security - IP Rate Limiting
# ===========================================
MAX_REQUESTS_PER_IP_PER_SECOND=50
MAX_CONNECTIONS_PER_IP=5
IP_BLOCK_DURATION_MS=60000

# ===========================================
# Game Wallet Configuration (REQUIRED)
# ===========================================
# SECURITY: Generate a strong random password (min 32 chars in production)
# Example: openssl rand -base64 32
GAME_WALLET_MASTER_PASSWORD=

# ===========================================
# Octra Chain Configuration (REQUIRED)
# ===========================================
# Octra Chain RPC URL for on-chain verification
OCTRA_RPC_URL=https://rpc.octra.network

# ===========================================
# Epoch-based Verification Settings
# ===========================================
# Poll interval for epoch checking (milliseconds)
EPOCH_POLL_INTERVAL_MS=5000

# Maximum epoch changes to wait for confirmation
MAX_EPOCH_CHANGES=10

# ===========================================
# Transaction Gas (OU) Settings
# ===========================================
# Default OU for transactions
DEFAULT_OU=1000

# Fallback OU if default fails
FALLBACK_OU=10000
